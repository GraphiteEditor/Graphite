{
	"name": "graphite-web-frontend",
	"private": true,
	"type": "module",
	"description": "Graphite's web app frontend. Planned to be replaced by a native GUI written in Rust in the future.",
	"author": "Graphite Authors <contact@graphite.rs>",
	"scripts": {
		"dev": "cargo watch -s \"wasm-pack build frontend-svelte/wasm --dev\" & vite || kill $!",
		"lint": "eslint src",
		"build": "npm run build-wasm && vite build",
		"build-wasm": "wasm-pack build ./wasm --release",
		"watch:wasm": "cd wasm && cargo watch -s \"wasm-pack build --dev\"",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json"
	},
	"dependencies": {
		"@tauri-apps/api": "^1.2.0",
		"class-transformer": "^0.5.1",
		"graphite-wasm-svelte": "file:wasm/pkg",
		"idb-keyval": "^6.2.0",
		"reflect-metadata": "^0.1.13"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^2.0.2",
		"@tsconfig/svelte": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^5.48.0",
		"@typescript-eslint/parser": "^5.48.0",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.2",
		"rollup-plugin-license": "^3.0.1",
		"sass": "^1.57.1",
		"svelte": "^3.55.0",
		"svelte-check": "^3.0.2",
		"svelte-preprocess": "^5.0.0",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.1.1",
		"vite-plugin-top-level-await": "^1.2.2",
		"vite-plugin-wasm": "^3.1.1"
	},
	"//": "Notes about dependency issues and incompatibilities should be added here when needed.",
	"homepage": "https://graphite.rs",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/GraphiteEditor/Graphite.git"
	}
}
